                });
                secondSlide.addImage({ path: document.getElementById('imagedata').innerHTML, x: 1.7, y: 1.1, w: 2, h: 1 });

                const headingFont = { fontSize: 14, bold: true, color: 'FF0000' }; // Red color and font size 13
