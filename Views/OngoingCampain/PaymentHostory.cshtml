@using Hoarding_management.Data
@model CampaignPagedViewModel

<body>
    <div class="container-fluid my-2">
        <div class="p-2">
            <div class="row align-items-center">
                <div class="col-12 col-md-5">
                    <h3 class="text-primary pt-2 pl-4">Ongoing Campaigns</h3>
                </div>
                <div class="col-12 col-md-7">
                    <div class="d-flex flex-column flex-md-row justify-content-md-end">
                        <input type="search" id="searchQuery" autocomplete="off" placeholder="Search.." class="ml-4 rounded-pill p-2 ml-2 btn-outline-red" style="border:1px solid" value="@Model.SearchQuery" oninput="searchCustomers()" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Focus the search input when the query is not empty -->
    @if (!string.IsNullOrEmpty(Model.SearchQuery))
    {
        <script>
            <script>
                $(document).ready(function () {
                    var searchInput = $('#searchQuery');
                    searchInput.focus();

                    // Set the cursor at the end of the input field
                    var val = searchInput.val();
                    searchInput.val('').val(val); // Clears and sets the value back to move the cursor to the end
                });
        </script>
    }

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="container-fluid p-2">
                <!-- Search and Row Quantity Section -->
                <div class="row mb-2">
                    <div class="col-md-1">
                        <select id="rowQuantity" class="form-control" onchange="updateRowQuantity()" style="outline: 1px solid #b4b4b4;color: #050000;">
                            @if (Model.PageSize == 5)
                            {
                                <option value="5" selected>5</option>
                            }
                            else
                            {
                                <option value="5">5</option>
                            }

                            @if (Model.PageSize == 10)
                            {
                                <option value="10" selected>10</option>
                            }
                            else
                            {
                                <option value="10">10</option>
                            }

                            @if (Model.PageSize == 20)
                            {
                                <option value="20" selected>20</option>
                            }
                            else
                            {
                                <option value="20">20</option>
                            }

                            @if (Model.PageSize == 50)
                            {
                                <option value="50" selected>50</option>
                            }
                            else
                            {
                                <option value="50">50</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="table-responsive mt-4">
                    <table class="table table-striped text-center" id="campaignsTable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>Vendor </th>
                                <th>Customer </th>
                                <th>Campaigns Book Date</th>

                                <th>Amount</th>
                                <td>Payment status</td>
                                <td>Payment</td>

                                @* <th class="text-center">Actions</th> *@
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int indexId = 0;
                            }
                            @foreach (var item in Model.CampaignsViewModel)
                            {
                                @if (item.Ispaid == true && item.Amount != null && Convert.ToDecimal(item.Amount) > 0)
                                {
                                    indexId++;
                                    <!-- increment index for each row -->
                                    <tr>
                                        <td>@indexId</td> <!-- display row number -->

                                        <td>
                                            <img src="data:image/png;base64,@item.Image" class="img-fluid" alt="Image" width="100%" height="100%" />
                                        </td>

                                        <td class="text-start">
                                            <strong>@item.VendorName</strong><br />
                                            @item.Location<br />
                                            <strong>@item.City</strong>
                                        </td>

                                        <td>@item.CustomerName</td>
                                        <td>@item.FromDate?.ToString("dd-MMM-yyyy") TO @item.ToDate?.ToString("dd-MMM-yyyy")</td>
                                        <td>@item.BookingAmt</td>

                                        <td style="color:@(item.Ispaid ? "green" : "red")">
                                            @(item.Ispaid ? "Paid" : "pending")
                                        </td>

                                        <td>
                                            @if (item.Amount != null && Convert.ToDecimal(item.Amount) > 0)
                                            {
                                                <span class="badge bg-success round-pill" style="border-radius:8px">  @item.Amount</span>

                                                <br />
                                                <span style="font-size:12px">Success</span>
                                            }

                                        </td>

                                        @*  <td class="text-center">
                                        <button type="button" class="btn btn-primary p-2"
                                                onclick="openEditcampModal('@item.Id', '@item.FromDate?.ToString("yyyy-MM-dd")', '@item.ToDate?.ToString("yyyy-MM-dd")', '@item.BookingAmt','@item.FkInventoryId')">
                                            <i class="mdi mdi-table-edit"></i>
                                        </button>
                                        |
                                        <button type="button" class="btn btn-danger p-2" data-toggle="modal" data-target="#deleteModal" onclick="deleteModel('@item.Id','@item.FkInventoryId')">
                                            <i class="mdi mdi-delete"></i>
                                        </button>
                                    </td> *@
                                    </tr>
                                }
}
                        </tbody>

                    </table>

                    <div class="pagination justify-content-end m-2">
                        @if (Model.TotalPages > 0)
                        {
                            if (Model.CurrentPage > 1)
                            {
                                <a href="@Url.Action("Index", new { searchQuery = Model.SearchQuery, pageNumber = Model.CurrentPage - 1, pageSize = Model.PageSize })" class="btn btn-primary">Previous</a>
                            }

                            for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <a href="@Url.Action("Index", new { searchQuery = Model.SearchQuery, pageNumber = i, pageSize = Model.PageSize })" class="btn @(i == Model.CurrentPage ? "btn-secondary" : "btn-light")">@i</a>
                            }

                            if (Model.CurrentPage < Model.TotalPages)
                            {
                                <a href="@Url.Action("Index", new { searchQuery = Model.SearchQuery, pageNumber = Model.CurrentPage + 1, pageSize = Model.PageSize })" class="btn btn-primary">Next</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pay Modal -->
    <div class="modal fade" id="payModal" tabindex="-1" aria-labelledby="payModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="payModalLabel">Make Payment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="payForm">
                        <input type="hidden" id="indexid" />

                        <div class="mb-3">
                            <label>Campaign Id</label>
                            <input type="text" id="payCampaignId" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label>Customer</label>
                            <input type="text" id="payCustomer" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label>Amount</label>
                            <input type="text" id="payAmount" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label>Payment Mode</label>
                            <select id="paymentMode" class="form-select" onchange="togglePaymentFields()">
                                <option value="">-- Select Mode --</option>
                                <option value="Cash">Cash</option>
                                <option value="UPI">Online</option>
                            </select>
                        </div>

                        <div class="mb-3" id="upiSection" style="display:none;">
                            <label>UPI ID</label>
                            <input type="text" id="upiId" class="form-control" placeholder="Enter UPI ID" />
                        </div>

                        <div class="mb-3" id="mobileSection">
                            <label>Mobile Number</label>
                            <input type="text" id="mobileNumber" class="form-control" placeholder="Enter Mobile Number" maxlength="10" />
                        </div>

                        <div class="text-end">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-success" onclick="confirmPayment()">Confirm Payment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Edit Campaign Modal -->
    <div class="modal fade" id="editCampaignModal" tabindex="-1" aria-labelledby="editCampaignModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Campaign</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form id="editCampaignForm">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="startDate">Start Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control fromdate editfromdate" id="editfromdate" style="border: 1px solid ; border-radius:10px" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="endDate">End Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control odate  edittodate" id="edittodate" style="border: 1px solid ; border-radius:10px" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="form-group col-md-12">
                                    <label for="budget">Budget <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control budget" id="budget" placeholder="Budget" style="border: 1px solid ; border-radius:10px" required>
                                </div>
                                <input type="hidden" id="editId" />

                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" form="editCampaignForm" id="saveEditcampain">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteCampaignModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="border-radius:20px;">
                <div class="modal-header">
                    <h5 class="modal-title text-primary">Delete Campaign</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editId" />
                    <p class="text-center">Are you sure you want to delete this campaign?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="DeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <input type="text" id="fk_id" style="display:none" ; />


    <script>

        function deleteModel(id, fk_id) {
            $('#editId').val(id);
            $('#fk_id').val(fk_id);
        }

        $('#DeleteBtn').on('click', function () {

            var id = $('#editId').val();
            var fk_id = $('#fk_id').val();

            console.log(id);
            console.log(fk_id);

            $.ajax({
                url: '/OngoingCampain/DeleteCampaign',
                type: 'DELETE',
                data: { id: id, fk_id },
                success: function (response) {
                    toastr.success('Campaign deleted successfully.');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    toastr.error('Error deleting campaign.');
                }
            });
        });

    </script>


</body>

<script src="~/js/campaignscript.js"></script>