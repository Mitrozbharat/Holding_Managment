@model CampaignPagedViewModel
<body>
    <div class="container-fluid my-2">
        <div class="card p-2">
            <div class="row align-items-center">
                <div class="col-12 col-md-5">
                    <h3 class="text-primary pt-2 pl-4">Ongoing Campaigns</h3>
                </div>

                <div class="col-12 col-md-7">
                    <div class="d-flex flex-column flex-md-row justify-content-md-end">
                        @*                         <button type="button" class="mb-3  mb-md-0 w-25 w-md-25 text-white rounded btn btn-primary" data-toggle="modal" data-target="#addCampaignModal">Add Campaign</button>
                        *@
                        <input type="search" name="search" placeholder="Search" class="ml-4 rounded-pill p-2" />
                    </div>
                </div>
            </div>
        </div>
    </div>

   <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="container-fluid">
            <div class="table-responsive mt-4">
                <table class="table table-striped" id="campaignsTable">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>City</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Amount</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Campaigns)
                        {
                            <tr>
                                <td>@item.CustomerName</td>
                                <td>@item.City</td>
                                <td>@item.FromDate?.ToString("yyyy-MM-dd")</td>
                                <td>@item.ToDate?.ToString("yyyy-MM-dd")</td>
                                <td>@item.BookingAmt</td>
                                <td class="text-center">
                                  @*   <button type="button" class="btn btn-info p-2" data-toggle="modal" data-target="#detailCampaignModal">
                                        <i class="mdi mdi-alert-box"></i>
                                    </button> | *@
                                    <button type="button" class="btn btn-primary p-2" 
                                        onclick="openEditModel('@item.Id', '@item.CustomerName', '@item.BusinessName', '@item.City', '@item.FromDate?.ToString("yyyy-MM-dd")', '@item.ToDate?.ToString("yyyy-MM-dd")', '@item.BookingAmt')">
                                        <i class="mdi mdi-table-edit"></i>
                                    </button> |
                                    <button type="button" class="btn btn-danger p-2" data-toggle="modal" data-target="#deleteModal" onclick="getId('@item.Id')">
                                        <i class="mdi mdi-delete"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
           
                    <nav aria-label="Page navigation">
                        <ul class="pagination  justify-content-end m-2">
                            <!-- Previous Page -->
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("MyQuotation", new { pageNumber = Model.CurrentPage - 1, pageSize = 7 })" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <!-- Page Numbers -->
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("MyQuotation", new { pageNumber = i, pageSize = 7 })">@i</a>
                                </li>
                            }

                            <!-- Next Page -->
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("MyQuotation", new { pageNumber = Model.CurrentPage + 1, pageSize = 7 })" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
     </div>
   </div>
    <!-- Add Campaign Modal -->
    <div class="modal fade" id="addCampaignModal" tabindex="-1" aria-labelledby="addCampaignModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCampaignModalLabel">Add Campaign</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addCampaignForm">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="campaignName">Campaign Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control custom-border" id="campaignName" placeholder="Campaign Name" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="startDate">Start Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control custom-border" id="startDate" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="endDate">End Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control custom-border" id="endDate" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="status">Status <span class="text-danger">*</span></label>
                                <select class="form-control custom-border" id="status" required>
                                    <option value="">Select Status</option>
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="budget">Budget <span class="text-danger">*</span></label>
                                <input type="number" class="form-control custom-border" id="budget" placeholder="Budget" required>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" form="addCampaignForm">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Campaign Modal -->
    <div class="modal fade" id="editCampaignModal" tabindex="-1" aria-labelledby="editCampaignModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCampaignModalLabel">Edit Campaign</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editCampaignForm">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="editCampaignName">Campaign Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control custom-border" id="editCustomerName" name="editCustomerName" placeholder="Campaign Name" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="editStartDate">Start Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control custom-border" id="editFromDate" name="editFromDate" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="editEndDate">End Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control custom-border" id="editToDate" name="editToDate" required>
                            </div>
                          
                            <div class="form-group col-md-6">
                                <label for="editBudget">Budget <span class="text-danger">*</span></label>
                                <input type="number" class="form-control custom-border" id="editAmount" name="editAmount" placeholder="Budget" required>
                            </div>
                         </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" form="editCampaignForm">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!--delete model-->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteCampaignModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content " style="border-radius:20px;">
                <div class="modal-header">
                    <h5 class="modal-title text-primary" id="deleteModalLabel">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-muted-foreground text-center mt-2">Are you sure you want to Delete this ongoing Campaigns ?</p>
                    <input type="hidden" id="qid" />
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <script>

       function openEditModel(id, customerName, businessName, city, fromDate, toDate, amount) {
    $('#editCampaingnId').val(id);
    $('#editCustomerName').val(customerName);
    $('#editBusinessName').val(businessName);
    $('#editCity').val(city);
    $('#editFromDate').val(fromDate);
    $('#editToDate').val(toDate);
    $('#editAmount').val(amount);

    // Show the modal
    $('#editCampaignModal').modal('show');
}




