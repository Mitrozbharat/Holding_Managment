                                }

                                var isLight = item.isLight == 1 ? "Yes" : "No";
                                var cardHtml = `
                                                <div class="hoarding-item my-2">
                                                            <img src="data:image/png;base64,${item.image}" alt="Image" class="rounded img-height">
                                                    <div class="hoarding-info">
